package com.theginbin.utils{	public class ConvertStringUtil	{		public function ConvertStringUtil()		{		}				public static function addNumberCommas(numString:String):String {			var integer: String = "" ;			var fraction: String = "" ;			var array: Array = numString.split(".");			var regex: RegExp = /(\d+)(\d{3})/;			integer = array[0];			while( regex.test(integer) ){				integer = integer.replace(regex,'$1' + ',' + '$2');			}			if (array[1]){ fraction = integer.length > 0 ? '.' + array[1] : ''; }						return (integer + fraction);		}	}}