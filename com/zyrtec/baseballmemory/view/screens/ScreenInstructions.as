package com.zyrtec.baseballmemory.view.screens{	import com.g2.gaming.framework.BasicScreen;	import com.g2.gaming.framework.events.ButtonIdEvent;	import com.greensock.TweenMax;	import com.greensock.easing.*;	import com.theginbin.ui.RollOverButton;	import com.zyrtec.baseballmemory.events.BaseballMemoryEvent;	import com.zyrtec.baseballmemory.model.BMModel;	import com.zyrtec.baseballmemory.view.screens.instructions.*;		import flash.display.MovieClip;	import flash.events.Event;	import flash.events.MouseEvent;	// =================================================	// ================ @Class	// =================================================	public class ScreenInstructions extends ScreenBase	{		public var bonusScreen:MovieClip;// displays bonus screen with quiz				private var _quiz:Quiz; //quiz		private var	_model:BMModel;					// Game Model (Singleton)		// =================================================		// ================ @Constructor		// =================================================		public function ScreenInstructions(int=0, addBitmapBackground:Boolean=false, width:Number=0, height:Number=0, isTransparent:Boolean=false, color:uint=0):void		{			super(id, addBitmapBackground, width, height, isTransparent, color);						bonusScreen.quiz.visible = false;						_model = BMModel.getInstance();						_quiz = new Quiz(bonusScreen.quiz);					}		// =================================================		// ================ @Callable		// =================================================		override public function addEvents():void{			if (_quiz!=null) {				_quiz.addEventListener(BaseballMemoryEvent.QUIZ_COMPLETE, onQuizComplete);				_quiz.addEvents(); //enables buttons after animation done 			}		}				override public function removeEvents():void{			if (_quiz!=null) {				_quiz.removeEventListener(BaseballMemoryEvent.QUIZ_COMPLETE, onQuizComplete);				_quiz.removeEvents();			}		}				public function showQuiz():void {			_model.numBonuses-=_model.numQuizBonuses;			_model.numQuizBonuses = 0;//reset the quiz bonus value			_quiz.init();			bonusScreen.quiz.visible = true;		}				// =================================================		// ================ @Workers		// =================================================				// =================================================		// ================ @Handlers		// =================================================				private function onQuizComplete(e:BaseballMemoryEvent):void {			//remove events			_model.numQuizBonuses = _quiz.totalCorrect; //update model bonus total						//animate out quiz then dispatch to start game			this.dispatchEvent(new ButtonIdEvent(ButtonIdEvent.BUTTON_ID, this.id));		}	}}