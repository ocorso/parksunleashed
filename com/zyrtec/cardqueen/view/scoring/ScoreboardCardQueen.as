package com.zyrtec.cardqueen.view.scoring{	import com.g2.gaming.framework.ScoreBoard;	import com.greensock.TweenMax;	import com.zyrtec.cardqueen.view.scoring.ScoreBoxElement;		import flash.display.DisplayObject;	import flash.display.MovieClip;	public class ScoreboardCardQueen extends ScoreBoard	{		//declare public display objects		public var points:MovieClip;		public var level:MovieClip;		public var lives:MovieClip;		public var bg:MovieClip;				private var _textElements:Object;		private var _isStarted:Boolean;				public function ScoreboardCardQueen()		{			//super();		}				override public function createTextElement(key:String, obj:*):void {			if (_textElements == null) {				_textElements = {};			}			_textElements[key] = obj;		}				override public function update(key:String, value:String):void {			var tempElement:ScoreBoxElement = ScoreBoxElement(_textElements[key]);			tempElement.setContentText(value);		}				public function updateLives(livesNum:String):void {			//trace("update lives", _isStarted);			//lives.gotoAndStop(int(livesNum)+1);			if (!_isStarted) {				_isStarted = true;				TweenMax.delayedCall(1, lives.life1.gotoAndPlay, ["ANIMATE_IN"]);				TweenMax.delayedCall(1.2, lives.life2.gotoAndPlay, ["ANIMATE_IN"]);				TweenMax.delayedCall(1.4, lives.life3.gotoAndPlay, ["ANIMATE_IN"]);			} else {			//	trace("$$$$$$$$$=== ",lives["life"+(int(livesNum)+1).toString()], livesNum, int(livesNum));				MovieClip(lives["life"+(int(livesNum)+1).toString()]).gotoAndPlay("ANIMATE_OUT");			}		}				public function set isStarted(value:Boolean):void {			_isStarted = value;			if (!_isStarted) { //reset the hearts				lives.life1.gotoAndStop(1);				lives.life2.gotoAndStop(1);				lives.life3.gotoAndStop(1);			}		}			}}